{
  "name": "ron-web",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run serve:ssr",
    "start:local": "run-script-os",
    "start:local:win32": "ng serve --open --proxy-config proxy.conf.local.json --configuration development",
    "start:local:darwin": "ng serve --open --proxy-config proxy.conf.local.json --configuration development",
    "start:default": "ng serve --open --proxy-config proxy.conf.local.json",
    "start:prod": "ng serve --open --configuration production",
    "build": "ng build",
    "build:gitHubPage": "ng build --base-href /RonWeb/ && npm run sitemap && node rename-script.js RonWeb true true",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --code-coverage",
    "test-ci": "ng test --watch=false --browsers=ChromeHeadlessNoSandbox --code-coverage",
    "mock-service:win32": "cd osprey-mock-service && start cmd /c osprey-mock-service -f api.raml -p 3000",
    "mock-service:darwin": "cd osprey-mock-service; osprey-mock-service -f api.raml -p 3000 &",
    "prestart:local:win32": "npm run mock-service:win32",
    "prestart:local:darwin": "npm run mock-service:darwin",
    "dev:ssr:local": "ng run RonWeb:serve-ssr:development",
    "dev:ssr:prod": "ng run RonWeb:serve-ssr:production",
    "serve:ssr": "node dist/RonWeb/server/main.js",
    "build:ssr": "ng build && ng run RonWeb:server && npm run sitemap && node rename-script.js RonWeb true true",
    "prerender": "ng run RonWeb:prerender --routes-file routes.txt && npm run sitemap && node rename-script.js RonWeb true true",
    "prepare": "husky install",
    "build:docker": "docker build -t ronweb . --no-cache",
    "killport": "npx kill-port --port 4200,3000,9000",
    "sitemap": "node sitemap.js",
    "e2e": "ng e2e",
    "cypress:open:local": "cypress open --config-file cypress/cypress.dev.ts",
    "cypress:run:local": "cypress run --config-file cypress/cypress.dev.ts",
    "cypress:open:prod": "cypress open --config-file cypress/cypress.prod.ts",
    "cypress:run:prod": "cypress run --config-file cypress/cypress.prod.ts",
    "browserslist": "npx browserslist",
    "prettier": "npx prettier --write .",
    "prettier-check": "npx pretty-quick --check",
    "compodoc": "npx compodoc -p tsconfig.doc.json -s -r 9000 -o -w --language zh-CN"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.12",
    "@angular/common": "^17.3.12",
    "@angular/compiler": "^17.3.12",
    "@angular/core": "^17.3.12",
    "@angular/forms": "^17.3.12",
    "@angular/platform-browser": "^17.3.12",
    "@angular/platform-browser-dynamic": "^17.3.12",
    "@angular/platform-server": "^17.3.12",
    "@angular/router": "^17.3.12",
    "@angular/service-worker": "^17.3.12",
    "@angular/ssr": "^17.3.17",
    "@ckeditor/ckeditor5-alignment": "^37.1.0",
    "@ckeditor/ckeditor5-angular": "^6.0.1",
    "@ckeditor/ckeditor5-build-classic": "^37.1.0",
    "@ckeditor/ckeditor5-code-block": "^37.1.0",
    "@ckeditor/ckeditor5-font": "^37.1.0",
    "@ckeditor/ckeditor5-highlight": "^37.1.0",
    "@ckeditor/ckeditor5-horizontal-line": "^37.1.0",
    "@ckeditor/ckeditor5-html-support": "^37.1.0",
    "@ckeditor/ckeditor5-language": "^37.1.0",
    "@ckeditor/ckeditor5-source-editing": "^37.1.0",
    "@ng-icons/core": "^23.3.0",
    "@ng-icons/feather-icons": "^29.5.0",
    "@ng-icons/heroicons": "^23.3.0",
    "@ng-select/ng-select": "^11.0.0",
    "@ngneat/dialog": "^4.0.0",
    "@rx-angular/isr": "^17.1.0",
    "animate.css": "^4.1.1",
    "daisyui": "^2.51.5",
    "dayjs": "^1.11.7",
    "express": "^4.15.2",
    "highlight.js": "^11.8.0",
    "lottie-web": "^5.11.0",
    "rxjs": "~7.8.0",
    "sweetalert2": "^11.7.5",
    "swiper": "^11.2.8",
    "tslib": "^2.3.0",
    "typed.js": "^2.0.15",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.17",
    "@angular/cli": "~17.3.17",
    "@angular/compiler-cli": "^17.3.12",
    "@compodoc/compodoc": "^1.1.21",
    "@cypress/schematic": "^2.5.0",
    "@types/express": "^4.17.0",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^14.15.0",
    "autoprefixer": "^10.4.14",
    "axios": "^1.4.0",
    "browser-sync": "^3.0.0",
    "cypress": "latest",
    "husky": "^8.0.3",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "lint-staged": "^13.2.2",
    "osprey-mock-service": "^1.0.0",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "run-script-os": "^1.1.6",
    "sitemap": "^7.1.1",
    "tailwindcss": "^3.3.2"
  },
  "lint-staged": {
    "*.{ts,js,vue}": [
      "eslint --fix"
    ],
    "*.{html,scss,css,vue}": [
      "prettier --write",
      "stylelint --fix"
    ]
  }
}